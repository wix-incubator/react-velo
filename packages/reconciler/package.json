        "@testing-library/react": "^12.1.2",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.10",
        "@types/react": "^17.0.37",
        "@types/react-reconciler": "^0.26.4",
        "babel-jest": "^27.4.5",
        "devtools-protocol": "^0.0.959523",
        "esbuild": "^0.14.1",
